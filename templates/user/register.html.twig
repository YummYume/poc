{# /app/templates/user/register.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Register!{% endblock %}

{% block body %}
<div class="container">
    <div class="row justify_content_center">
        <div class="col-xl-5 col-md-6 col-12 mb-md-0 mb-4 login_form">
            {{ form_start(form) }}
            <div class="">
                {{ form_row(form.email) }}
                {{ form_row(form.name) }}
                {{ form_row(form.firstname) }}
                {{ form_row(form.password) }}
                {{ form_widget(form.submit) }}
            </div>
            {{ form_end(form) }}
        </div>
    </div>
</div>
{% endblock %}