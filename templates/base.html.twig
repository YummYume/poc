<!DOCTYPE html>
<html lang="fr">
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        {% block stylesheets %}
            <link href="{{ asset('css/main.css') }}" type="text/css" rel="stylesheet" />
            <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
            <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta2/dist/css/bootstrap.min.css" rel="stylesheet">
        {% endblock %}
    </head>
    <body>
        <header>
            <nav class="navbar navbar-expand-lg navbar-light py-3 mb-2" style="background-color: rgb(30, 42, 71)">
                <div class="container-fluid">
                    <a class="navbar-brand text-white" href="#">Chinese Netflix</a>
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="collapse navbar-collapse" id="navbarSupportedContent">
                        <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                            {% if app.user %}
                            <li class="nav-item">
                                <a class="nav-link text-white" href="{{ path('series')}}">Mes séries</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-white" href="{{ path('addSeries')}}">Ajouter une série</a>
                            </li>
                            {% endif %}
                        </ul>
                        {% if app.user %}
                        <form class="nav-item d-flex">
                            <a class="nav-link" href="#" tabindex="-1" aria-disabled="true">{{ app.user.name }} {{ app.user.firstname }}</a>
                        </form>
                        
                        <form class="nav-item d-flex">
                            <a class="nav-link" href="{{ path('app_logout')}}" tabindex="-1" aria-disabled="true">Déconnexion</a>
                        </form>
                        {% else %}
                        <form class="nav-item d-flex">
                            <a class="nav-link" href="{{ path('app_login')}}" tabindex="-1" aria-disabled="true">Connexion</a>
                        </form>
                        {% endif %}
                    </div>
                </div>
            </nav>
        </header>

        <div id="body">
            {% block body %}

            {% endblock %}
        </div>

        <footer class="bottom-0 start-0 end-0 h-auto w-100 container-fluid sticky-bottom" style="background-color: black;">
            <div class="row justify-content-center py-3 mt-2">
                <div class="col-xl-2 col-md-3 col-sm-6 col-12 pb-xl-0 pb-sm-2 pb-3">
                    <p class="text-white mb-1"><b>Chinese Netflix</b></p>
                    <p class="text-secondary mb-0">30 rue de Meaux,</p>
                    <p class="text-secondary mb-0">60300 Senlis</p>
                    <p class="text-secondary mb-0">2021</p>
                </div>
                <div class="col-xl-2 col-md-3 col-sm-6 col-12 pb-xl-0 pb-sm-0 pb-3">
                    <p class="text-white mb-1"><b>Nous contacter</b></p>
                    <p class="text-secondary mb-0">Tél : 03 66 66 66 66</p>
                    <p class="text-secondary mb-0">Fax : 03 66 66 66 66</p>
                    <p class="text-secondary mb-0">Email : contact@lyceestvincent.fr</p>
                    <p class="text-secondary mb-0">Web : https://chinese-netflix.lyceestvincent.fr</p>
                </div>
                <div class="col-xl-2 col-md-3 col-sm-6 col-12 pb-xl-0 pb-sm-2 pb-3">
                    <p class="text-white mb-1"><b>Accès rapide</b></p>
                    <p class="text-secondary mb-0">> Connexion</p>
                    <p class="text-secondary mb-0">> Inscription</p>
                    <p class="text-secondary mb-0">> Mes Séries</p>
                </div>
                <div class="col-xl-2 col-md-3 col-sm-6 col-12 pb-xl-0 pb-sm-0 pb-3">
                    <p class="text-white mb-1"><b>Suivez-nous</b></p>
                    <div class="bg-dark mr-2 d-inline-block text-center" style="width:35px; height:35px;">
                        <svg xmlns="http://www.w3.org/2000/svg" fill="currentColor" class="bi bi-twitter text-secondary w-75 h-75 pt-1" viewBox="0 0 16 16" style="vertical-align: middle;">
                            <path d="M5.026 15c6.038 0 9.341-5.003 9.341-9.334 0-.14 0-.282-.006-.422A6.685 6.685 0 0 0 16 3.542a6.658 6.658 0 0 1-1.889.518 3.301 3.301 0 0 0 1.447-1.817 6.533 6.533 0 0 1-2.087.793A3.286 3.286 0 0 0 7.875 6.03a9.325 9.325 0 0 1-6.767-3.429 3.289 3.289 0 0 0 1.018 4.382A3.323 3.323 0 0 1 .64 6.575v.045a3.288 3.288 0 0 0 2.632 3.218 3.203 3.203 0 0 1-.865.115 3.23 3.23 0 0 1-.614-.057 3.283 3.283 0 0 0 3.067 2.277A6.588 6.588 0 0 1 .78 13.58a6.32 6.32 0 0 1-.78-.045A9.344 9.344 0 0 0 5.026 15z"/>
                        </svg>
                    </div>
                    <div class="bg-dark ml-2 d-inline-block text-center" style="width:35px; height:35px;">
                        <svg xmlns="http://www.w3.org/2000/svg" fill="currentColor" class="bi bi-facebook text-secondary w-75 h-75 pt-1" viewBox="0 0 16 16">
                            <path d="M16 8.049c0-4.446-3.582-8.05-8-8.05C3.58 0-.002 3.603-.002 8.05c0 4.017 2.926 7.347 6.75 7.951v-5.625h-2.03V8.05H6.75V6.275c0-2.017 1.195-3.131 3.022-3.131.876 0 1.791.157 1.791.157v1.98h-1.009c-.993 0-1.303.621-1.303 1.258v1.51h2.218l-.354 2.326H9.25V16c3.824-.604 6.75-3.934 6.75-7.951z"/>
                        </svg>
                    </div>
                </div>
            </div>
        </footer>

        {% block javascripts %}
            <script src="{{ asset('build/js/app.js') }}"></script>
            <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta2/dist/js/bootstrap.bundle.min.js" integrity="sha384-b5kHyXgcpbZJO/tY9Ul7kGkf1S0CWuKcCD38l8YkeH8z8QjE0GmW1gYU5S9FOnJ0" crossorigin="anonymous"></script>
        {% endblock %}
    </body>
</html>